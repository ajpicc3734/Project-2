<h3>Records</h3>
<div id="forum">
<ol>
  {{#each records}}
  <li>
    <article class="post">
      <div class="title">
      
      </div>
      <div>Artist: {{artist}}</div>
      <div>Title: {{title}} </div>
      <img class="record-image" src="/assets/images/{{filename}}"/> 
      <div>Belongs to {{user.username}} </div>
      <div><a href="mailto:{{email}}">Inquire About This Record</a></div>
      <div class="meta">

        {{!-- <a href="/post/{{id}}">{{comments.length}} comment(s)</a> --}}
      </div>
    </article>
  </li>
  {{/each}}
</ol>
</div>

<form id="upload">
  <div>
    <label for="imageUpload">Image</label>
    <input type="file" name="image" id="imageUpload" />

  </div>
  
  <div>
    <label for="fileName">File Name</label>
    <input type="text" name="fileName" id="fileName" />

  </div>

  <button type="submit">Submit</button>
</form>

<script src="/assets/js/ImageUpload.js"></script>
</section>
