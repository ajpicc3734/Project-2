  <h3>Posts</h3>
<div id ="forum">
  <div class="post-list">
  {{#each posts}}
  <div id="post">
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        {{!-- <span>({{post_url}})</span> --}}
      </div>
      <div class="meta">

        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </div>
  {{/each}}
  </div>
</div>

<div id="addNewPost">
  <a href="/addpost">Add a New Post</a>
</div>
  
